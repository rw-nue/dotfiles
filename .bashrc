function gsrev(){
if [ "$1" == "" ] ; then
echo "enter stash number as argument"
else
git stash show -p "stash@{${1}}" | git apply -R
fi
}
function gsshow(){
if [ "$1" == "" ] ; then
echo "enter stash number as argument"
else
git stash show -p "stash@{${1}}"
fi
}
function gsapply(){
if [ "$1" == "" ] ; then
echo "enter stash number as argument"
else
git stash apply "stash@{${1}}"
fi
}
function gsdrop(){
if [ "$1" == "" ] ; then
echo "enter stash number as argument"
else
git stash drop "stash@{${1}}"
fi
}

gsel(){
git status -s -u -b

echo "
"

git status --stat

echo "
"


i=1
for line in $(git status -s -u | cut -d" " -f3 | rev | cut -d"/" -f1 | rev )
do
	echo "$((i++)) - $line" 
done 
	


echoMessage "enter num" ; read num ;

# スペース数によって空白取得される　UU のとき？など
file=`git status -s -u | cut -d" " -f3 | head -n $num | tail -n 1`

echoMessage "file: $file ";
echoMessage "(v:vim , a:add , r:rm , grm:git rm , co:checkout , bl:blame )" ; read com ;
if [ "$com" == "v" ]; then
vim $file
fi
if [ "$com" == "a" ]; then
git add $file
fi
if [ "$com" == "git remove" ]; then
git rm $file
fi
if [ "$com" == "remove" ]; then
rm -i $file
fi
if [ "$com" == "co" ]; then
git checkout HEAD -- $file
fi
if [ "$com" == "bl" ]; then
git blame $file
fi

if [ "$com" == "logp" ]; then
	git log -p $file
fi
if [ "$com" == "logstat" ]; then
	git log --stat $file
fi





}




	
